<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Бой</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<div class="container">
  <div class="row justify-content-center align-items-center" style="margin-bottom: 1%;">
    <div class="col-5 text-center">
      <h2>Команда 1</h2>
      <div class='controls mt-4'>
        <div class='row justify-content-start'>
          <div class='col-4 text-center'>
            <%= link_to 'Добавить Рыцаря', '/create_knight', class: 'btn btn-primary' %>
          </div>
          <div class='col-4 text-center'>
            <%= link_to 'Добавить Мага', '/create_mage', class: 'btn btn-primary' %>
          </div>
          <div class='col-4 text-center'>
            <%= link_to 'Удалить Рыцаря', '/destroy_knight', method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' %>
          </div>
          <div class='col-4 text-center'>
            <%= link_to 'Удалить Мага', '/destroy_mage', method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-6 text-center">
      <h2>Команда 2</h2>
      <div class='controls mt-3'>
        <div class='row justify-content-end'>
          <div class='col-4 text-center'>
            <%= link_to 'Добавить Медузу', '/create_medusa', class: 'btn btn-primary' %>
          </div>
          <div class='col-4 text-center'>
            <%= link_to 'Добавить Джинна', '/create_jinn', class: 'btn btn-primary' %>
          </div>
          <div class='col-4 text-center'>
            <%= link_to 'Удалить Джинна', '/destroy_jinn', method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' %>
          </div>
          <div class='col-4 text-center'>
            <%= link_to 'Удалить Медузу', '/destroy_medusa', method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class='battlefield'>
    <div class='team_container left'>
      <%- @team1.each do |character| %>
        <div>
          <%= image_tag character.unit%>
        </div>
      <% end %>
    </div>
    <div class='team_container right'>
      <%- @team2.each do |character| %>
        <div>
          <%= image_tag character.unit%>
        </div>
      <% end %>
    </div>
  </div>
</div>
</body>
</html>
